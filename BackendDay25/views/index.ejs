<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/styleSheets/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-gradient-to-br from-gray-100 to-gray-200 min-h-screen p-6">
    <div class="max-w-5xl mx-auto space-y-10">
      <!-- Create Task Form -->
      <div
        class="backdrop-blur-xl bg-white/60 shadow-xl border border-white/40 rounded-3xl p-8"
      >
        <h2 class="text-2xl font-bold mb-4 text-gray-800">Create a New Task</h2>

        <form class="space-y-5" action="/create" method="post">
          <input
            name="title"
            type="text"
            placeholder="Title your task"
            class="w-full px-4 py-3 rounded-2xl bg-white/70 border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-400 focus:bg-white transition"
          />

          <textarea
            name="details"
            placeholder="Enter your task description"
            class="w-full px-4 py-3 h-36 rounded-2xl bg-white/70 border border-gray-300 shadow-sm resize-none focus:ring-2 focus:ring-indigo-400 focus:bg-white transition"
          ></textarea>

          <button
            type="submit"
            class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-2xl shadow-lg active:scale-[.98] transition"
          >
            Create Task
          </button>
        </form>
      </div>

      <!-- Task Cards -->
      <div class="flex flex-wrap gap-6 justify-start">
        <% if(files.length > 0){ %> <% files.forEach((elem) => { %>

        <div
          class="w-72 bg-white shadow-xl rounded-3xl p-6 border border-gray-100 hover:-translate-y-1 hover:shadow-2xl transition"
        >
          <h1 class="text-xl font-semibold text-gray-800 mb-3">
            Heading : <%=elem%>
          </h1>
          <a
            href="/file/<%=elem%>"
            class="text-indigo-600 font-medium cursor-pointer hover:underline hover:text-indigo-700"
          >
            Read More â†’
          </a>
        </div>
        <% }); %> <% } else { %>
        <h1>No Task Yet</h1>
        <% } %>
      </div>
    </div>
  </body>
</html>
