<!-- @format -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit File</title>
    <link rel="stylesheet" href="/styleSheets/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body
    class="min-h-screen bg-gradient-to-br from-gray-100 via-gray-200 to-gray-300 p-6 flex items-center justify-center"
  >
    <div class="w-full max-w-3xl">
      <div
        class="backdrop-blur-xl bg-white/60 shadow-2xl border border-white/40 rounded-3xl p-10 space-y-8 transition hover:shadow-[0_10px_40px_rgba(0,0,0,0.1)]"
      >
        <!-- Header -->
        <div class="flex items-center justify-between">
          <h1 class="text-2xl font-bold text-gray-800 tracking-wide">
            Edit File Name
          </h1>

          <a
            href="/"
            class="text-indigo-600 hover:text-indigo-700 font-medium hover:underline"
          >
            ‚Üê Back to Home
          </a>
        </div>

        <!-- Form -->
        <form class="space-y-8" action="/edit" method="post">
          <div class="flex gap-6 flex-wrap">
            <!-- Previous Name -->
            <div class="flex-1 min-w-[45%]">
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Current File Name</label
              >
              <input
                name="previous"
                type="text"
                value="<%= fileName %>"
                readonly
                class="w-full px-4 py-3 rounded-2xl bg-gray-100 border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-400 transition"
              />
            </div>

            <!-- New Name -->
            <div class="flex-1 min-w-[45%]">
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >New File Name</label
              >
              <input
                name="new"
                type="text"
                placeholder="Enter new file name"
                class="w-full px-4 py-3 rounded-2xl bg-white/70 border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-400 focus:bg-white transition"
              />
            </div>
          </div>

          <!-- Button -->
          <button
            type="submit"
            class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-2xl shadow-lg active:scale-[.98] transition"
          >
            Update File Name
          </button>
        </form>
      </div>
    </div>
  </body>
</html>
