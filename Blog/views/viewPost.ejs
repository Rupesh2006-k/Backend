<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>üõí Product Store</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="bg-gradient-to-br from-gray-100 to-gray-200 min-h-screen">
    <div class="max-w-4xl mx-auto py-12 px-4">
      <h1
        class="text-5xl font-extrabold text-center text-indigo-700 mb-12 drop-shadow-sm"
      >
        üìù Blog Posts
      </h1>

      <div class="grid gap-8 md:grid-cols-2">
        <% blogs.forEach(element => { %>
        <div
          class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 border border-gray-200 p-6"
        >
          <h2 class="text-2xl font-bold text-gray-800 mb-2">
            <%= element.title %>
          </h2>

          <p class="text-sm text-gray-500 mb-4">
            ‚úçÔ∏è <%= element.author %> ‚Ä¢ <%= element.date %>
          </p>

          <p class="text-gray-700 leading-relaxed mb-4">
            <%= element.content %>
          </p>

          <div class="flex flex-wrap gap-2 mt-4">
            <% element.tags.forEach(tag => { %>
            <span
              class="bg-indigo-100 text-indigo-700 px-3 py-1 rounded-full text-sm font-medium"
            >
              #<%= tag %>
            </span>
            <% }) %>
          </div>

          <div class="mt-6 flex justify-end gap-3">
            <button
              class="bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium px-4 py-2 rounded-lg transition-colors duration-300"
            >
              Read More ‚Üí
            </button>

            <button
              class="bg-red-600 hover:bg-red-700 text-white text-sm font-medium px-4 py-2 rounded-lg transition-colors duration-300"
              type="submit"
            >
              üóëÔ∏è Delete
            </button>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
