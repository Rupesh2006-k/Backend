<!-- @format -->

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edite User</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="bg-green-50 flex flex-col items-center gap-10 justify-center min-h-screen text-green-900 p-6"
  >
    <a
      href="/read"
      class="text-green-700 font-semibold hover:text-green-900 underline"
      >â‡¦ Go to Read All Users</a
    >

    <div
      class="bg-white p-10 rounded-3xl shadow-2xl w-full max-w-md border border-green-200 hover:shadow-green-300 transition-all"
    >
      <h1
        class="text-4xl font-extrabold mb-6 text-center text-green-700 tracking-wide"
      >
        Update User
      </h1>

      <form action="/update/<%= user._id %>" method="post" class="space-y-6">
        <input
          type="text"
          name="name"
          value="<%=user.name%>"
          placeholder="Enter Name"
          class="w-full px-4 py-3 border border-green-300 rounded-lg bg-green-100 text-green-900 placeholder-green-700 focus:outline-none focus:ring-2 focus:ring-green-400 shadow-sm"
        />

        <input
          type="email"
          value="<%=user.email%>"
          name="email"
          placeholder="Enter Email"
          class="w-full px-4 py-3 border border-green-300 rounded-lg bg-green-100 text-green-900 placeholder-green-700 focus:outline-none focus:ring-2 focus:ring-green-400 shadow-sm"
        />

        <input
          type="text"
          value="<%=user.image%>"
          name="image"
          placeholder="Give image Url"
          class="w-full px-4 py-3 border border-green-300 rounded-lg placeholder-green-700 bg-green-100 text-green-900 focus:outline-none focus:ring-2 focus:ring-green-400 shadow-sm"
        />

        <button
          type="submit"
          class="w-full bg-green-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-green-700 transition-all shadow-md hover:shadow-lg"
        >
          Update User
        </button>
      </form>
    </div>
  </body>
</html>
