<!-- @format -->

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Post</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-100 dark:bg-gray-900 min-h-screen flex flex-col items-center justify-center p-6 transition duration-300">

    <!-- Page Title -->
    <h2 class="text-3xl font-bold mb-6 text-gray-800 dark:text-gray-100">
      Edit Post
    </h2>

    <!-- Card Container -->
    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-xl p-8 w-full max-w-md space-y-6 transition">

      <!-- Post Info -->
      <div class="space-y-1">
        <p class="text-gray-600 dark:text-gray-300 font-medium">Post ID: <span class="font-semibold"><%= postData.id %></span></p>
        <p class="text-gray-600 dark:text-gray-300 font-medium">Username: <span class="font-semibold"><%= postData.username %></span></p>
      </div>

      <!-- Edit Form -->
      <form action="/posts/<%= postData.id %>?_method=PATCH" method="post" class="space-y-4">
        <label class="block text-gray-700 dark:text-gray-300 font-semibold" for="content">
          Edit Content
        </label>
        <textarea
          id="content"
          name="content"
          rows="6"
          class="w-full p-4 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-gray-100 resize-none"
        ><%= postData.content %></textarea>

        <button
          type="submit"
          class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 rounded-lg text-lg font-semibold transition"
        >
          Save Changes
        </button>
      </form>

      <!-- Back Link -->
      <a href="/posts" class="block text-center mt-4 text-indigo-600 dark:text-indigo-400 hover:underline font-medium">
        ‚Üê Back to Home
      </a>

    </div>

  </body>
</html>
